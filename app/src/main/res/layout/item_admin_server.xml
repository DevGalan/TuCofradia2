<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_dark">

    <LinearLayout
        android:id="@+id/serverInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/serverActions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Title"
            tools:text="Los illojuaners"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Body"
            tools:text="Servidor de TuCofradia 2 por y para iilojuaners, desde la beta hasta la muerte cabron brr."/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/tvCode"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvAmountPlayers"
                android:layout_height="wrap_content"
                style="@style/Body"
                tools:text="2C7D6P"/>

            <TextView
                android:id="@+id/tvAmountPlayers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvCode"
                android:gravity="end"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/Body"
                tools:text="Jugadores: 8/10"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/serverActions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/serverInfo"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/llButtons1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/llButtons2">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Button.Action"
                android:layout_marginBottom="8dp"
                android:text="@string/edit"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Button.Action"
                android:text="Ola"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llButtons2"
            android:layout_width="0dp"
            android:layout_marginHorizontal="8dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/llButtons1"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Button.Action"
                android:layout_marginBottom="8dp"
                android:text="Wuaa"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Button.Action"
                android:text="Diablo"/>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>